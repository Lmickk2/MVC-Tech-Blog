<div class="featured">Featured Posts:</div>


{{#each posts as |post|}}

  <div class="row">

    <div class="postBox">
			<div class="row  justify-content-center headerRow">
      <div class="col-8">
        <h2>
          <a class="postView text-uppercase" href="/posts/{{post.id}}">{{post.name}}</a>
        </h2>
      </div>

      <div class="col-4">
        <p class="postedBy">Post from:
          {{post.user.name}}
        </p>
      </div>
			</div>
    <div class="postContent">
      <p class="post-text">
        -{{post.description}}
      </p>
    </div>
    </div>

  </div>

{{/each}}